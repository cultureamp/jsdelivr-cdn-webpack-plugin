{
  "name": "jsdelivr-cdn-webpack-plugin",
  "version": "1.0.0",
  "description": "Dynamically get your dependencies from JSDelivr cdn rather than bundling them in your app",
  "license": "MIT",
  "repository": "sparkboom/jsdelivr-cdn-webpack-plugin",
  "author": {
    "name": "Matthew McLeod",
    "email": "matt@sparkboom.com"
  },
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "xo && nyc ava",
    "prepublishOnly": "npm run build",
    "build": "babel src --out-dir lib"
  },
  "files": [
    "index.js",
    "lib"
  ],
  "keywords": [
    "webpack",
    "cdn",
    "unpkg.com",
    "html-webpack-plugin",
    "webpack-manifest-plugin",
    "html",
    "script",
    "assets",
    "externals"
  ],
  "dependencies": {
    "html-webpack-include-assets-plugin": "^1.0.4",
    "read-pkg-up": "^4.0.0",
    "resolve-pkg": "^1.0.0"
  },
  "peerDependencies": {
    "webpack": "4"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "codecov": "^3.0.4",
    "html-webpack-plugin": "^3.2.0",
    "mz": "^2.6.0",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.1",
    "webpack": "^4.17.1",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "2.0.0-rc.2",
    "xo": "^0.22.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": 6
          }
        }
      ]
    ],
    "plugins": [
      "transform-runtime"
    ]
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "rules": {
      "eqeqeq": "off",
      "no-eq-null": "off",
      "comma-dangle": "off",
      "object-curly-spacing": "off",
      "space-before-function-paren": "off",
      "quotes": "off"
    },
    "ignores": [
      "test/fixtures/**/*.js"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.js",
      "!test/fixtures/output/**/*"
    ],
    "babel": "inherit",
    "require": [
      "babel-core/register"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }
}
